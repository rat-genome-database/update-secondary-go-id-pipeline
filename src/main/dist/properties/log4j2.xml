<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="core" append="true" fileName="logs/core.log" filePattern="logs/core.log.%d{yyyy-MM}">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/><!-- 1 month roll over -->
            </Policies>
        </RollingFile>
        <RollingFile name="status" append="true" fileName="logs/status.log" filePattern="logs/status.log.%d{yyyy-MM}">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <File name="summary" append="false" fileName="logs/summary.log">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>

        <RollingFile name="pairs" append="true" fileName="logs/updateSecondaryPrimaryGOIDPairs.log" filePattern="logs/updateSecondaryPrimaryGOIDPairs.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="updated" append="true" fileName="logs/updateTermSecondaryGOID.log" filePattern="logs/updateTermSecondaryGOID.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="deleted" append="true" fileName="logs/deleteDuplicateEntriesSecondaryGOID.log" filePattern="logs/deleteDuplicateEntriesSecondaryGOID.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="status" level="debug" additivity="false">
            <AppenderRef ref="core"/>
            <AppenderRef ref="status" level="info"/>
            <AppenderRef ref="summary" level="info"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>

        <Logger name="pairs" level="debug" additivity="false">
            <AppenderRef ref="pairs"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="updated" level="debug" additivity="false">
            <AppenderRef ref="updated"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="deleted" level="debug" additivity="false">
            <AppenderRef ref="deleted"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
    </Loggers>
</Configuration>